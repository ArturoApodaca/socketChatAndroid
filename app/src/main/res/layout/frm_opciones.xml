<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="chat.chuperamigos.itesum.clientechat.frm_Opciones">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/tvUsuario"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FF8400"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/btnGuardar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onGuardar"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FF8400" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edUsuario"
        android:layout_below="@+id/tvUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servidor"
        android:id="@+id/tvServidor"
        android:layout_below="@+id/edUsuario"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FF8400" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edServidor"
        android:layout_below="@+id/tvServidor"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edUsuario" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puerto"
        android:id="@+id/tvPuerto"
        android:layout_below="@+id/edServidor"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF8400" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edPuerto"
        android:layout_below="@+id/tvPuerto"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edServidor" />

</RelativeLayout>
